---
import ChallengeLayout from '../../../../../layouts/ChallengeLayout.astro';
---


<ChallengeLayout>
    <div class="flex flex-col gap-3">
        <input class="border-2 max-w-52" type="number" placeholder="Número 1" id="num1" onchange="verificarSomaJs1()"/>
        <input class="border-2 max-w-52" type="number" placeholder="Número 2" id="num2" onchange="verificarSomaJs1()"/>
        <div>Result is: <span id="result"></span></div>
    </div>
</ChallengeLayout> 


<script>
    // This window thing is the only difference betwen a regular HTML, CSS and JavaScript project
    // But the funcion name should be an Unique one
    window.verificarSomaJs1 = function() {
        const num1 = document.querySelector("#num1").value;
        const num2 = document.querySelector("#num2").value;
        const soma = num1 + num2;
        
        const result = document.querySelector("#result");
        result.innerText = soma;
    }
</script>
