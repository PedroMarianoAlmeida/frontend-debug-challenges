---
import Layout from "../../../../layouts/Layout.astro"
---

<Layout title="Soma bugada - JS Puro">
    <input type="number" placeholder="Número 1" id="num1" onchange="verificarSoma()"/>
    <input type="number" placeholder="Número 2" id="num2" onchange="verificarSoma()"/>
    <div>Resultado da Soma é: <span id="resultado"></span></div>

    <a href="vanila-js/resposta">Resposta</a>
</Layout>

<style>
    * {
        color: white;
    }
    input {
        color: black;
    }
</style>

<script>
    window.verificarSoma = function() {
        const num1 = document.querySelector("#num1").value;
        const num2 = document.querySelector("#num2").value;
        const soma = num1 + num2;
        
        const resultado = document.querySelector("#resultado");
        resultado.innerText = soma;
    }
</script>
